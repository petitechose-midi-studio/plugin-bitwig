{
    // Editor settings for C++
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Disable C/C++ IntelliSense (use clangd instead)
    "C_Cpp.intelliSenseEngine": "disabled",

    "clangd.arguments": [
        "--query-driver=${userHome}/.platformio/packages/toolchain-gccarmnoneeabi-teensy/bin/arm-none-eabi-*",
        "--background-index"
    ],

    "taskexplorer.exclude": [
        "**/.*/**"
    ],
    "taskexplorer.enabledTasks": {
        "python": false,
        "batch": false,
        "eslint": false,
        "npm": false,
        "powershell": false,
        "tsc": false,
        "workspace": false
    },
    "taskexplorer.taskButtons.clickAction": "Execute",
    "taskexplorer.usage.enabled": false,
    "workbench.editor.enablePreview": false
}